#include "../common/STD_PKT_COMMON.def"

//
// SCTP CHUNK_ASCONF
//
PKG_SCTP_SHORT_RECV_AUTH(
	sctp_chunk_asconf_add_addr,
	{
		chunk = chunk_asconf_add_addr;
	}
)

CHUNK_ASCONF chunk_asconf_add_addr {
	SerialNumber = RSERIAL;
	Param = addr0;
	Param = asconf_add_addr;
}

AddIPAddress asconf_add_addr {
	RequestID = any;
	Address = addr1;
}

#if (ENABLE_IPV6 == 0)

IPv4Address addr0 {
	Address = v4(SCTP4_NUT_NET0_ADDR);
}

IPv4Address addr1 {
	Address = v4(SCTP4_NUT_NET1_ADDR);
}

#else

IPv6Address addr0 {
	Address = SCTP6_NUT_NET0_ADDR;
}

IPv6Address addr1 {
	Address = SCTP6_NUT_NET1_ADDR;
}

#endif /* #if (ENABLE_IPV6 == 0) */

//
// SCTP CHUNK_ASCONF_ACK
//
PKG_SCTP_SHORT_SEND_AUTH(
	sctp_chunk_asconf_ack_bund,
	{
		chunk = chunk_asconf_ack_ok;
		chunk = chunk_asconf_ack_bad_seq;
	}
)

CHUNK_ASCONF_ACK chunk_asconf_ack_ok {
	SerialNumber = RSERIAL;
	Param = success_indt;
}

SuccessIndication success_indt {
	RequestID = ADDIPRID;
}

CHUNK_ASCONF_ACK chunk_asconf_ack_bad_seq {
	SerialNumber = RSERIAL + 1;
}

//
// SCTP CHUNK_ABORT
//
PKG_SCTP_SHORT_RECV(
	sctp_chunk_abort_bad_seq,
	{
		chunk = chunk_abort_bad_seq;
	}
)

CHUNK_ABORT chunk_abort_bad_seq {
	Error = err_illegal_asconf_ack;
}

IllegalASCONFAck err_illegal_asconf_ack {
}

