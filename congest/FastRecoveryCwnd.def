#include "../common/STD_PKT_COMMON.def"

#ifndef SACK
#define SACK	1
#endif

#define DEFINE_DATA(INDEX)	\
PKG_SCTP_SHORT_RECV(	\
	sctp_chunk_data_##INDEX, \
	{	\
		chunk = chunk_data_##INDEX; \
	} \
) \
 \
CHUNK_DATA chunk_data_##INDEX { \
	UFlag = any; \
	BFlag = 1; \
	EFlag = 1; \
	TSN = SACK + INDEX - 1; \
	Identifier = any; \
	SequenceNumber = any; \
	Protocol = any; \
	payload = any; \
}

#define DEFINE_SACK(INDEX, START, END)	\
PKG_SCTP_SHORT_SEND( \
	sctp_chunk_sack_##INDEX, \
	{ \
		chunk = chunk_sack_##INDEX; \
	} \
) \
\
CHUNK_SACK chunk_sack_##INDEX { \
	ACK = SACK; \
	AdvRecvWindow = ARWND; \
	NumOfGapAck = 1; \
	NumOfDupTSN = 0; \
	GapAckBlockStart = START; \
	GapAckBlockEnd = END; \
}

DEFINE_DATA(1)
DEFINE_DATA(2)
DEFINE_DATA(3)
DEFINE_DATA(4)
DEFINE_DATA(5)
DEFINE_DATA(6)
DEFINE_DATA(7)
DEFINE_DATA(8)
DEFINE_DATA(9)
DEFINE_DATA(10)
DEFINE_DATA(11)
DEFINE_DATA(12)
DEFINE_DATA(13)

DEFINE_SACK(2, 3, 3)
DEFINE_SACK(3, 3, 4)
DEFINE_SACK(4, 3, 5)

PKG_SCTP_SHORT_SEND( 
	sctp_chunk_sack_5, 
	{ 
		chunk = chunk_sack_5; 
	} 
) 

CHUNK_SACK chunk_sack_5 { 
	ACK = SACK + 1; 
	AdvRecvWindow = ARWND; 
	NumOfGapAck = 1; 
	NumOfDupTSN = 0; 
	GapAckBlockStart = 2; 
	GapAckBlockEnd = 4; 
}

