#include "../common/STD_PKT_COMMON.def"

//
// SCTP CHUNK_INIT
//
PKG_SCTP_EXTH_SEND(
	sctp_chunk_init_addr,
	{
		SourcePort = SCTP_TN0_PORT;
		DestinationPort = SCTP_NUT0_PORT;
	},
	{
		chunk = chunk_init_addr;
	}
)

CHUNK_INIT chunk_init_addr {
	InitiateTag = INITTAG;
	AdvRecvWindow = ARWND;
	NumOfOutbound = OS;
	NumOfInbound = MIS;
	TSN = INITTSN;
	Param = addrs;
}

#if (ENABLE_IPV6 == 0)

IPv4Address addrs {
	Address = v4(SCTP4_TN_NET0_ADDR);
}

#else

IPv6Address addrs {
	Address = SCTP6_TN_NET0_ADDR;
}

#endif /* #if (ENABLE_IPV6 == 0) */

